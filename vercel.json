{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/daily-stats",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/weekly-contributors",
      "schedule": "0 12 * * 1"
    },
    {
      "path": "/api/cron/auto-curate-collections",
      "schedule": "0 * * * *"
    }
  ]
}

